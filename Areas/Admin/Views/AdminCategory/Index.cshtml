@model IEnumerable<EcommerceWeb.Models.Category>

@{
    ViewData["Title"] = "Manage Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Manage Category</span>
        </nav>
    </div>
</div>
<h2 class="header-title">Manage Category</h2>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" style="min-width: 180px;" id="idRole" name="idRole">
                            <option value="0" disabled selected></option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminCategory" asp-action="Create">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Add Category</span>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model) {
                            <tr>
                                <th scope="row">@item.CatId</th>
                                <td>@item.CatName</td>
                                <td>@item.Description</td>

                                <td>
                                    <a class="btn btn-success btn-tone m-r-5" asp-action="Edit" asp-route-id="@item.CatId">Edit</a> |
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-action="Details" asp-route-id="@item.CatId">Detail</a> |
                                    <a class="btn btn-danger btn-tone m-r-5" asp-action="Delete" asp-route-id="@item.CatId">Delete</a>
                                </td>
                            </tr>
                        }  
                        }   
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div>
